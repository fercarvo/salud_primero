                        type: "PATCH",
                        url: url,
                        data: formData,
                        success:function(data){
                            elemento.siblings('.unidades').text(data.unidades);
                            elemento.siblings('.resultado').text(data.resultado);
                            elemento.siblings('.valores_referencia').text(data.valores_referencia);
                            
                        }
                    });
                    //console.log(url);
                    id_examen = ""
                    return false;
                });
