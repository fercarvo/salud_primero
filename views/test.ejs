<body>
    <div>
        <form id="formularioCrearPaciente" method="post" action="/paciente">
            <fieldset>
                <legend>Agregar Paciente</legend>
                Usuario: <input type="email" name="correo" placeholder="Ingrese correo electr&oacute;nico" require/><br />
                Nombres: <input type="text" name="Nombres" placeholder="Ingrese nombres" require/><br />
                Apellidos: <input type="text" name="Apellidos" placeholder="Ingrese apellidos" require/><br />
                Cedula: <input type="text" name="Cedula" placeholder="Ingrese c&eacute;dula" require/><br />
                Direccion: <input type="text" name="Direccion" placeholder="Ingrese direcci&oacute; paciente" require/><br />
                Tel√©fono: <input type="text" name="telefono" placeholder="Ingrese tel&eacute;fono" require/><br />
                <input type="submit" value="Enviar">
                <input type="reset" value="Borrar">
            </fieldset>
        </form>
    </div>
    
    <div>
        <form id="formularioActualizarPaciente" method="put" action="/paciente/:id">
            <fieldset>
                <legend>Actualice sus datos</legend>
                Nombres: <input type="text" name="nombre" placeholder="Ingrese sus nombres" require/><br />
                Apellidos: <input type="text" name="apellido" placeholder="Ingrese sus apellidos" require/><br />
                C&eacute;dula: <input type="text" name="cedula" placeholder="Ingrese su c&eacute;dula" require/><br />
                Direcci&oacute;n: <input type="text" name="direccion" placeholder="Ingrese su direcci&oacute;" require/><br />
                Tel&eacute;fono: <input type="text" name="telefono" placeholder="Ingrese su tel&eacute;fono" require/><br />
                Foto: <input type="file" name="foto" accept=image/* require/><br />
                <input type="submit" value="Enviar">
                <input type="reset" value="Borrar">
            </fieldset>
        </form>
    </div>
    
    <div>
        <form id="formularioCrearMuestra" method="post" action="/examen">
            <fieldset>
                <legend>Agregar una muestra</legend>
                Paciente: <input list="pctes" name="paciente">
                <datalist id="pctes">
                    <option value="Lenin Tenecela">
                    <option value="Guido Duchi">
                    <option value="Paciente1">
                </datalist>
                Muestra: <input list="muestras" name="muestra">
                <datalist id="muestras">
                    <option value="Sangre">
                    <option value="Orina">
                    <option value="Heces">
                </datalist>
                Nombre: <input type="text" name="nombre" require/><br />
                <input type="submit" value="Enviar">
                <input type="reset" value="Borrar">
            </fieldset>
        </form>
    </div>
    
    paciente: req.body.paciente,
		muestra: req.body.muestra,
		nombre: req.body.nombre
    
    </body>
